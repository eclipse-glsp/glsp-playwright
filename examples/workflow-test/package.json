  "files": [
    "src",
    "tests"
  ],
  "scripts": {
    "build": "tsc -b",
    "check-types": "tsc --noemit",
    "clean": "rimraf lib tsconfig.tsbuildinfo server/*.log",
    "download:server": "tsx scripts/download-server.ts",
    "lint": "eslint --ext .ts,.tsx ./src ./tests",
    "lint:all": "yarn check-types && yarn lint",
    "lint:fix": "yarn lint --fix",
    "prepare": "yarn clean && yarn build && yarn lint && playwright install",
    "server:standalone": "tsx scripts/start-server standalone",
    "test": "playwright test",
    "test:standalone": "yarn test --project=standalone",
    "watch": "tsc -w"
  },
  "devDependencies": {
    "@eclipse-glsp/glsp-playwright": "0.1.0",
    "@playwright/test": "^1.32.3",
    "dotenv": "^16.0.3",
    "mvn-artifact-download": "5.1.0",
    "ts-dedent": "^2.2.0",
    "tsx": "^3.12.4"
  },
  "publishConfig": {
    "access": "public"
  }
